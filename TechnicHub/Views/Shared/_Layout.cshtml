@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor
@{          var logged = @HttpContextAccessor.HttpContext.Session.GetInt32("logged");
          var loggedUser = @HttpContextAccessor.HttpContext.Session.GetString("loggedUser");
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] TechnicHub</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-toggleable-sm bg-dark border-bottom box-shadow mb-3">
            <div class="container">

                <div class="btn-group">
                    <button type="button" class="btn btn-primary dropdown-toggle btn-group" data-toggle="dropdown">
                        ☰
                    </button>
                    <div class="dropdown-menu">
                        @*<a class="navbar-brand nav-link text-dark dropdown-item" asp-area="" asp-controller="Admin" asp-action="Index">Admin</a>*@
                        <a class="navbar-brand nav-link text-dark dropdown-item" asp-area="" asp-controller="User" asp-action="Chatrooms">Chat</a>
                        <a class="navbar-brand nav-link text-dark dropdown-item" asp-area="" asp-controller="User" asp-action="Newsletter">Newsletter</a>
                        <a class="navbar-brand nav-link text-dark dropdown-item" asp-area="" asp-controller="User" asp-action="Shop">Shop</a>
                        <a class="navbar-brand nav-link text-dark dropdown-item" asp-area="" asp-controller="User" asp-action="Infopage">Info</a>
                    </div>
                </div>

                <a id="logo" class="text-center " asp-area="" asp-controller="Home" asp-action="Index">TechnicHub</a>



               

                
                @{if (logged == 1) { 
                      <a class="navbar-brand text-center " asp-area="" asp-controller="Profile" asp-action="ProfileData">@loggedUser</a>
                      <a class="navbar-brand text-center " asp-area="" asp-controller="Profile" asp-action="LogOut">LogOut</a>
    }else{
                     <a class="navbar-brand text-center " asp-area="" asp-controller="Profile" asp-action="LogIn">LogIn</a>
                     <a class="navbar-brand text-center " asp-area="" asp-controller="Profile" asp-action="Registration">Register</a>
                }}






            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">

        <div class="container">
            &copy; 2021 - TechnicHub - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>

    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
